extends layout 


block content 
    h2= title 
    form(method='POST' action='')
        label(for='cat-name') Name: 
        input#cat-name(type='text',placeholder='Computers, Consoles etc.' name='name' value=(undefined===category ? '' : category.name))
        label(for='cat-desc') Description: 
        textarea#cat-desc(type='textarea' name='description') #{undefined===category ? '' : category.description}
        button(type='submit') Submit
    if errors
        ul
        for error in errors
            li!= error.msg